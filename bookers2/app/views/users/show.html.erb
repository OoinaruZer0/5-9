<div class="col-xs-3">
    <h2>User info</h2>
    <table class="table">
      <tbody><tr></tr>
        <% if @user.profile_image.present? %>
          <%= attachment_image_tag @user, :profile_image, :fill,100, 100, format: 'jpeg' %>
        <% else %>
          <p><%= image_tag "no_image.jpg", :width=>"100px", :height=>"100px" %></p>
        <% end %>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody></table>
    <div class="row">
        <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/177/edit"></a>
    </div>
    <%= link_to "Edit", edit_user_path(@user.id) %>


<h2>New book</h2>
 <%= form_for(@book) do |f| %>

  <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

<h1>Books</h1>
<table>
 <tr>
  <th>title</th>
  <th>body</th>
 </tr>


 <% @books.each do |book| %>

 <tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill,40,40, format: 'jpeg' %></td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><% if book.user == current_user %>
  <%= link_to "Edit", edit_book_path(book.id) %>
<% end %></td>
  <td><% if book.user == current_user %>
  <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %></td>
 </tr>
 <% end %>

</table>
