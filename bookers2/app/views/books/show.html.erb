
<div class="col-xs-3">
    <h2>User info</h2>
    <table class="table">
      <tbody><tr></tr>
        <% if @bookf.user.profile_image.present? %>
          <%= attachment_image_tag @bookf.user, :profile_image, :fill,100, 100, format: 'jpeg' %>
        <% else %>
          <p><%= image_tag "no_image.jpg", :width=>"100px", :height=>"100px" %></p>
        <% end %>
      <tr>
        <th>name</th>
        <th><%= @bookf.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @bookf.user.introduction %></th>
      </tr>
    </tbody></table>
    <div class="row">
        <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/177/edit"></a>
    </div>
    <%= link_to "Edit", edit_user_path(@bookf.user.id) %>


