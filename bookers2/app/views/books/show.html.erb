<div class="body">
      <div class="container">
          
        
        <p id="notice"></p>
      
        <div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <table class="table">
      <tbody><tr></tr> 
        <% if @bookf.user.profile_image.present? %>
          <%= attachment_image_tag @bookf.user, :profile_image, :fill,100, 100, format: 'jpeg' %>
        <% else %>
          <p><%= image_tag "no_image.jpg", :width=>"100px", :height=>"100px" %></p>
        <% end %>
      <tr>
        <th>name</th>
        <th><%= @bookf.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @bookf.user.introduction %></th>
      </tr>
    </tbody></table>
    <div class="row">
      <% if @bookf.user == current_user %>
      <%= link_to "", edit_user_path(@bookf.user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
       <% end %>
    </div>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
  </div>
  <% end %>
  <div><%= flash[:notice] %></div>
  </div>
  

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= attachment_image_tag @bookf.user, :profile_image, :fill,40,40, format: 'jpeg' %><br>
          <%= @bookf.user.name %></td>
        <td><%= @bookf.title %></td>
        <td><%= @bookf.body %></td>
        <td>
    <% if @bookf.user == current_user %>
    <%= link_to "Edit", edit_book_path(@bookf.id) %>
    <% end %>
    </td>
    <td>
    <% if @bookf.user == current_user %>
    <%= link_to "Destroy", book_path(@bookf.id), method: :delete, "data-confirm" => "Are you sure?" %>
    <% end %>
  
    </td>

      </tr>
    </tbody></table>

  </div>
</div>
      </div>
    </div>